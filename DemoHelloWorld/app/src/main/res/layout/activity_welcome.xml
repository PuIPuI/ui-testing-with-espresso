<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.somkiat.demohelloworld.WelcomeActivity">

    <Button
        android:text="Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="61dp"
        android:id="@+id/hello_button"
        android:onClick="onShow"
        app:layout_constraintLeft_toLeftOf="@+id/activity_welcome"
        app:layout_constraintRight_toRightOf="@+id/activity_welcome" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="177dp"
        android:id="@+id/welcome_message"
        app:layout_constraintLeft_toLeftOf="@+id/hello_button"
        app:layout_constraintRight_toRightOf="@+id/hello_button" />
</android.support.constraint.ConstraintLayout>
